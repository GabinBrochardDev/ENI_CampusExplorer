{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6 text-center">Gérer les villes</h1>

    <!-- Formulaire de recherche -->
    <div class="flex justify-center mb-6">
        {{ form_start(form, { 'attr': { 'class': 'flex items-center w-full max-w-xl' } }) }}

        <!-- Champ de recherche avec le bouton fusionné -->
        <div class="flex w-full max-w-xl">
            {{ form_widget(form.nom, { 'attr': { 
                'class': 'w-full p-3 rounded-l-md border border-gray-300 focus:ring focus:ring-blue-300 focus:border-blue-500 transition duration-200', 
                'placeholder': 'Rechercher une ville' 
            } }) }}

            <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-r-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-200">
                Rechercher
            </button>
        </div>

        {{ form_end(form) }}
    </div>

    <!-- Tableau des villes -->
    <div class="overflow-x-auto max-w-1xl mx-auto text-center">
        <table class="table-auto w-full border border-gray-300 shadow-lg">
            <thead class="bg-blue-50">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold text-center">Ville</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold text-center">Code postal</th>
                    <th class="px-4 py-2 text-left text-gray-700 font-semibold text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ville in villeList %}
                    <tr class="{% if loop.index is odd %}bg-white{% else %}bg-gray-50{% endif %} border-t hover:bg-gray-100 transition-colors">
                        <td class="px-4 py-2 text-gray-800">{{ ville.nom }}</td>
                        <td class="px-4 py-2 text-gray-800">{{ ville.codePostal }}</td>
                        <td class="px-4 py-2">
                            <a href="{{ path('admin_edit_ville', {id: ville.id}) }}" class="text-blue-600 hover:text-blue-800 transition-colors">Modifier</a>
                            <a href="{{ path('admin_delete_ville', {id: ville.id}) }}" class="text-red-600 hover:text-red-800 transition-colors ml-4">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                <tr class="bg-gray-100 border-t">
                    <td colspan="3" class="text-center py-4">
                        <a href="{{ path('admin_add_ville') }}" class="text-blue-600 hover:text-blue-800 font-semibold hover:underline">Ajouter</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
