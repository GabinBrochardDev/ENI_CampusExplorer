{% extends 'base.html.twig' %}

{% block title %}Modifier une ville{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-6 text-center my-12">Modifier une ville</h1>

        <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
            {{ form_start(form) }}

            <!-- Champ Nom -->
            <div class="mb-4">
                {{ form_row(form.nom, { 'attr': { 
                    'class': 'w-full p-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:outline-none transition duration-300', 
                    'placeholder': 'Nom de la ville' 
                } }) }}
            </div>

            <!-- Champ Code Postal -->
            <div class="mb-4">
                {{ form_row(form.codePostal, { 'attr': { 
                    'class': 'w-full p-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:outline-none transition duration-300', 
                    'placeholder': 'Code postal' 
                } }) }}
            </div>

            <!-- Bouton Modifier centrÃ© -->
            <div class="text-center">
                <button type="submit" class="mt-6 bg-[#2C2C2C] text-white font-semibold px-6 py-2 rounded-lg shadow-lg hover:shadow-xl focus:outline-none focus:ring focus:ring-gray-300 transition duration-300 ease-in-out transform hover:scale-105">
                    Modifier
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
