{% extends 'base.html.twig' %}

{% block title %}Page d'administration{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center my-12">
        <h1 class="text-4xl font-extrabold mb-10 text-white">Page d'administration</h1>
        
        <!-- Container for buttons -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 w-full max-w-md">
            <!-- Bouton Gérer les campus -->
            <a href="{{ path('admin_manage_campus') }}" class="text-white bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg text-center shadow-md transition duration-300 ease-in-out">
                Gérer les campus
            </a>

            <!-- Bouton Gérer les villes -->
            <a href="{{ path('admin_manage_villes') }}" class="text-white bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg text-center shadow-md transition duration-300 ease-in-out">
                Gérer les villes
            </a>

            <!-- Bouton Gérer les utilisateurs -->
            <a href="{{ path('admin_manage_users') }}" class="text-white bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg text-center shadow-md transition duration-300 ease-in-out">
                Gérer les utilisateurs
            </a>
        </div>
    </div>
{% endblock %}
