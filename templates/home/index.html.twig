{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Accueil - Sortir{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <!-- Header Section -->
    <header class="flex justify-between items-center p-4 bg-gray-300 rounded">
        <div class="flex items-center">
            <div class="w-16 h-16 bg-gray-400 flex items-center justify-center">
                <span>LOGO</span>
            </div>
            <h1 class="ml-4 text-2xl font-bold">Sortir.com</h1>
        </div>
        <div class="flex space-x-4 text-blue-600">
            <a href="#" class="hover:underline">Administration</a>
            <a href="{{ path('home') }}" class="hover:underline">Accueil</a>
            <a href="#" class="hover:underline">Mon profil</a>
            <a href="#" class="hover:underline">Se déconnecter</a> <!-- Lien de déconnexion -->
        </div>
    </header>

    <!-- Info Section -->
    <div class="flex justify-between items-center mt-4 p-4 bg-yellow-100 rounded">
        <span>Le lien Administration est accessible uniquement en tant qu'administrateur</span>
        <div class="text-right">
            <p>Date du jour : {{ "now"|date("d/m/Y") }}</p>
            <p>Participant : Jeanine L.</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="mt-4 p-4 bg-white rounded shadow">
        <h2 class="font-bold mb-2">Filtrer les sorties</h2>
        <div class="flex space-x-4">
            <div class="flex flex-col">
                <label for="campus" class="font-semibold">Campus</label>
                <select id="campus" class="border border-gray-300 p-2 rounded">
                    <option>CHARTRES DE BRETAGNE</option>
                    <!-- Add more options here -->
                </select>
            </div>
            <div class="flex flex-col flex-grow">
                <label for="search" class="font-semibold">Le nom de la sortie contient</label>
                <input type="text" id="search" class="border border-gray-300 p-2 rounded" placeholder="search">
            </div>
            <div class="flex flex-col">
                <label class="font-semibold">Entre</label>
                <div class="flex space-x-2">
                    <input type="date" class="border border-gray-300 p-2 rounded">
                    <span>et</span>
                    <input type="date" class="border border-gray-300 p-2 rounded">
                </div>
            </div>
        </div>
        <div class="flex space-x-4 mt-4">
            <div class="flex items-center space-x-2">
                <input type="checkbox" id="organisateur">
                <label for="organisateur">Sorties dont je suis l'organisateur/trice</label>
            </div>
            <div class="flex items-center space-x-2">
                <input type="checkbox" id="inscrit">
                <label for="inscrit">Sorties auxquelles je suis inscrit/e</label>
            </div>
            <div class="flex items-center space-x-2">
                <input type="checkbox" id="non-inscrit">
                <label for="non-inscrit">Sorties auxquelles je ne suis pas inscrit/e</label>
            </div>
            <div class="flex items-center space-x-2">
                <input type="checkbox" id="terminees">
                <label for="terminees">Sorties terminées</label>
            </div>
        </div>
        <button class="mt-4 bg-blue-600 text-white px-4 py-2 rounded">Rechercher</button>
    </div>

    <!-- Table Section -->
    <div class="mt-4 bg-white p-4 rounded shadow">
        <table class="min-w-full table-auto">
            <thead>
                <tr class="bg-gray-200 text-left">
                    <th class="p-2">Nom de la sortie</th>
                    <th class="p-2">Date de la sortie</th>
                    <th class="p-2">Clôture</th>
                    <th class="p-2">Inscrits/Places</th>
                    <th class="p-2">Etat</th>
                    <th class="p-2">Inscrit</th>
                    <th class="p-2">Organisateur</th>
                    <th class="p-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="border-b">
                    <td class="p-2">Philo</td>
                    <td class="p-2">xx/xx/xxxx</td>
                    <td class="p-2">xx/xx/xxxx</td>
                    <td class="p-2">8/8</td>
                    <td class="p-2">En cours</td>
                    <td class="p-2">X</td>
                    <td class="p-2 text-blue-600 hover:underline">Spinoz A.</td>
                    <td class="p-2 text-blue-600 hover:underline"><a href="#">Afficher</a></td>
                </tr>
                <!-- Add more rows here similar to the above one -->
            </tbody>
        </table>
        <button class="mt-4 bg-green-600 text-white px-4 py-2 rounded">Créer une sortie</button>
    </div>
</div>
{% endblock %}
