{% extends 'base.html.twig' %}

{% block title %}Accueil - Sortir{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <!-- Header Section -->

    <!-- Info Section -->
    <div class="flex justify-between items-center mt-4 p-4 bg-yellow-100 rounded">
        <span>Le lien Administration est accessible uniquement en tant qu'administrateur</span>
        <div class="text-right">
            <p>Date du jour : {{ "now"|date("d/m/Y") }}</p>
            <p>Participant : Jeanine L.</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="mt-4 p-4 bg-white rounded shadow">
        <h2 class="font-bold mb-2">Filtrer les sorties</h2>
        <form method="get" action="{{ path('home') }}">
            <div class="flex space-x-4">
                <div class="flex flex-col">
                    <label for="campus" class="font-semibold">Campus</label>
                    <select id="campus" name="campus" class="border border-gray-300 p-2 rounded">
                        <option value="">Tous</option>
                        {% for campus in campuses %}
                            <option value="{{ campus.id }}" {{ campus.id == app.request.get('campus') ? 'selected' : '' }}>
                                {{ campus.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="flex flex-col flex-grow">
                    <label for="search" class="font-semibold">Le nom de la sortie contient</label>
                    <input type="text" id="search" name="search" class="border border-gray-300 p-2 rounded" value="{{ app.request.get('search') }}">
                </div>

                <div class="flex flex-col">
                    <label class="font-semibold">Entre</label>
                    <div class="flex space-x-2">
                        <input type="date" name="start_date" class="border border-gray-300 p-2 rounded" value="{{ app.request.get('start_date') }}">
                        <span>et</span>
                        <input type="date" name="end_date" class="border border-gray-300 p-2 rounded" value="{{ app.request.get('end_date') }}">
                    </div>
                </div>
            </div>

            <div class="flex space-x-4 mt-4">
                <div class="flex items-center space-x-2">
                    <input type="checkbox" id="organisateur" name="organisateur" {{ app.request.get('organisateur') ? 'checked' : '' }}>
                    <label for="organisateur">Sorties dont je suis l'organisateur/trice</label>
                </div>
                <div class="flex items-center space-x-2">
                    <input type="checkbox" id="inscrit" name="inscrit" {{ app.request.get('inscrit') ? 'checked' : '' }}>
                    <label for="inscrit">Sorties auxquelles je suis inscrit/e</label>
                </div>
                <div class="flex items-center space-x-2">
                    <input type="checkbox" id="non-inscrit" name="non-inscrit" {{ app.request.get('non-inscrit') ? 'checked' : '' }}>
                    <label for="non-inscrit">Sorties auxquelles je ne suis pas inscrit/e</label>
                </div>
                <div class="flex items-center space-x-2">
                    <input type="checkbox" id="terminees" name="terminees" {{ app.request.get('terminees') ? 'checked' : '' }}>
                    <label for="terminees">Sorties terminées</label>
                </div>
            </div>
            
            <button type="submit" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded">Rechercher</button>
        </form>
    </div>

    <!-- Table Section -->
    <div class="mt-4 bg-white p-4 rounded shadow">
        <table class="min-w-full table-auto">
            <thead>
                <tr class="bg-gray-200 text-left">
                    <th class="p-2">Nom de la sortie</th>
                    <th class="p-2">Date de la sortie</th>
                    <th class="p-2">Clôture</th>
                    <th class="p-2">Inscrits/Places</th>
                    <th class="p-2">Etat</th>
                    <th class="p-2">Inscrit</th>
                    <th class="p-2">Organisateur</th>
                    <th class="p-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for sortie in sorties %}
                    <tr class="border-b">
                        <td class="p-2">{{ sortie.nom }}</td>
                        <td class="p-2">{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y') : '' }}</td>
                        <td class="p-2">{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
                        <td class="p-2">{{ sortie.estinscrit|length }}/{{ sortie.nbInscriptionMax }}</td>
                        <td class="p-2">{{ sortie.etat ? sortie.etat.libelle : '' }}</td>
                        <td class="p-2">{{ sortie.estinscrit ? 'X' : '' }}</td>
                        <td class="p-2 text-blue-600 hover:underline">{{ sortie.organisateur.nom }}</td>
                        <td class="p-2 text-blue-600 hover:underline"><a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center p-4">Aucune sortie disponible</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('sortie_create') }}" class="mt-4 bg-green-600 text-white px-4 py-2 rounded">Créer une sortie</a>
    </div>
</div>
{% endblock %}
