{# templates/sortie/afficher.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-4">Détails de la sortie</h1>

        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <h2 class="text-2xl font-semibold mb-2">{{ sortie.nom }}</h2>
            <p class="mb-2"><strong>Date de début :</strong> {{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i') : 'N/A' }}</p>
            <p class="mb-2"><strong>Date limite d'inscription :</strong> {{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : 'N/A' }}</p>
            <p class="mb-2"><strong>Nombre maximum d'inscriptions :</strong> {{ sortie.nbInscriptionMax }}</p>
            <p class="mb-2"><strong>État :</strong> {{ sortie.etat ? sortie.etat.libelle : 'N/A' }}</p>
            <p class="mb-2"><strong>Organisateur :</strong> {{ sortie.organisateur.nom }} {{ sortie.organisateur.prenom }}</p>
        </div>

        <div class="bg-white shadow-md rounded-lg p-6">
            <h2 class="text-2xl font-semibold mb-4">Personnes inscrites</h2>
            <ul class="list-disc pl-5">
                {% for inscrit in inscrits %}
                    <li class="mb-1">{{ inscrit.nom }}</li>
                {% else %}
                    <li class="text-gray-500">Aucune personne inscrite</li>
                {% endfor %}
            </ul>
        </div>

        <a href="{{ path('home') }}" class="inline-block mt-6 text-blue-500 hover:underline">Retour à la liste des sorties</a>
    </div>
{% endblock %}