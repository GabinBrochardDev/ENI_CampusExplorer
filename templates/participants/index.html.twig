{% extends 'base.html.twig' %}

{% block title %}Liste des participants{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full space-y-6">
        <h1 class="text-2xl font-bold text-center text-gray-700">Liste des participants</h1>
        <ul class="space-y-2">
            {% for participant in participants %}
                <li class="text-sm font-medium text-gray-700">
                    <a href="{{ path('app_participant_detail', {'id': participant.id}) }}" class="block mt-1 text-gray-900 hover:underline">
                        {{ participant.prenom }} {{ participant.nom }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}