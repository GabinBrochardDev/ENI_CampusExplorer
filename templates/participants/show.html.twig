{% extends 'base.html.twig' %}

{% block title %}Détails du participant{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full space-y-6">
        <h1 class="text-2xl font-bold text-center text-gray-700">Détails du participant</h1>
        <div class="flex justify-center">
            <div class="rounded-full border-2 border-gray-700 p-1">
                <img src="{{ asset('uploads/profile_photos/' ~ participant.photo) }}" alt="Photo de profil" class="w-32 h-32 rounded-full">
            </div>
        </div>
        <div class="space-y-2">
            <p class="text-sm font-medium text-gray-700">pseudo: <span class="block mt-1 text-gray-900">{{ participant.pseudo }}</span></p>
        </div>
        <div class="space-y-2">
            <p class="text-sm font-medium text-gray-700">Prénom: <span class="block mt-1 text-gray-900">{{ participant.prenom }}</span></p>
        </div>
        <div class="space-y-2">
            <p class="text-sm font-medium text-gray-700">Nom: <span class="block mt-1 text-gray-900">{{ participant.nom }}</span></p>
        </div>
        <div class="space-y-2">
            <p class="text-sm font-medium text-gray-700">Email: <span class="block mt-1 text-gray-900">{{ participant.email }}</span></p>
        </div>
        <div class="space-y-2">
            <p class="text-sm font-medium text-gray-700">Téléphone: <span class="block mt-1 text-gray-900">{{ participant.telephone }}</span></p>
        </div>
        <div class="space-y-2">
            <p class="text-sm font-medium text-gray-700">Campus: <span class="block mt-1 text-gray-900">{{ participant.campus.nom }}</span></p>
        </div>
    </div>
</div>
{% endblock %}