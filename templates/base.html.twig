<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sortir{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
</head>
<body class="bg-gray-900 text-white">

    <!-- Header -->
    <header class="bg-dark-800 p-6">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Logo section -->
            <div class="flex items-center">
                <img src="{{ asset('img/logo.png') }}" alt="Logo" class="h-8">
            </div>

            <!-- Navigation Menu -->
            <nav class="flex space-x-8">
                {# <a href="{{ path('product') }}" class="text-white hover:text-blue-500">Product</a>
                <a href="{{ path('features') }}" class="text-white hover:text-blue-500">Features</a>
                <a href="{{ path('marketplace') }}" class="text-white hover:text-blue-500">Marketplace</a>
                <a href="{{ path('company') }}" class="text-white hover:text-blue-500">Company</a> #}
            </nav>

            <!-- Authentication Section -->
            <div class="flex space-x-4">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_dashboard') }}" class="text-white hover:text-blue-500">Admin</a>
                {% endif %}
                {% if app.user %}
                    <a href="{{ path('app_profile') }}" class="text-white hover:text-blue-500">Mon profil</a>
                    <a href="{{ path('logout') }}" class="text-white hover:text-blue-500">Se d√©connecter</a>
                {% else %}

                {% endif %}
            </div>
        </div>
    </header>

    <!-- Main Content Block -->
    <main class="container mx-auto p-4">
        {% block body %}{% endblock %}
    </main>

</body>
</html>
