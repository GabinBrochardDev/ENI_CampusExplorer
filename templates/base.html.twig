<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sortir{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script></head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<body class="bg-gray-100">

    <!-- Header -->
    <header class="flex justify-between items-center p-4 bg-gray-300 rounded">
        <div class="flex items-center">
            <!-- Remplacement du bloc "LOGO" par l'image -->
            <div class="w-16 h-16 flex items-center justify-center">
                <img src="{{ asset('img/logo.png') }}" alt="Logo" class="w-full h-full object-contain">
            </div>
            <h1 class="ml-4 text-2xl font-bold">SORTIR.COM</h1>
        </div>
        <div class="flex space-x-4 text-blue-600">
            <!-- Lien vers l'administration visible seulement pour les admins -->
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_dashboard') }}" class="hover:underline">Administrateur</a>
            {% endif %}
            {% if app.user %}
                <!-- Liens visibles lorsque l'utilisateur est connecté -->
                <a href="{{ path('home') }}" class="hover:underline">Accueil</a>
                <a href="{{ path('app_profile') }}" class="hover:underline">Mon profil</a>
                <a href="{{ path('logout') }}" class="hover:underline">Se déconnecter</a>
            {% else %}
                <!-- Liens visibles lorsque l'utilisateur n'est pas connecté -->
                <a href="{{ path('login') }}" class="hover:underline">Se connecter</a>
                <a href="{{ path('app_register') }}" class="hover:underline">S'inscrire</a>
            {% endif %}
        </div>
    </header>

    <!-- Main Content Block -->
    <main class="container mx-auto p-4">
        {% block body %}{% endblock %}
    </main>

</body>
</html>
